{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "parserOptions": {
         "ecmaVersion": 12,
         "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "no-console": "warn",
        "no-unused-vars": [
            "error",
            {
               "argsIgnorePattern": "^_",
               "varsIgnorePattern": "^_",
               "caughtErrorsIgnorePattern": "^_"
            }
        ]
    }
}
